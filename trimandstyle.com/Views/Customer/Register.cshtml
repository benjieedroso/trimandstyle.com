@model trimandstyle.com.Models.Customer;
@{
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4 text-center">Create an Account</h1>
            <form id="createAccountForm" asp-action="RegisterCustomer" asp-controller="Customer">
                <!-- Full Name Input -->
                <div class="form-group mb-3">
                    <label for="fullName">Full Name:</label>
                    <input type="text" class="form-control" id="fullName" placeholder="Enter your full name" required asp-for="Name">
                </div>
                <!-- Email Input -->
                <div class="form-group mb-3">
                    <label for="email">Email Address:</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" required asp-for="Email">
                </div>
                <!-- Password Input -->
                <div class="form-group mb-3">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter your password" required asp-for="Password">
                </div>
                <!-- Confirm Password Input -->
                <div class="form-group mb-3">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm your password" required asp-for="ConfirmPassword">
                </div>
                <!-- Phone Number Input -->
                <div class="form-group mb-3">
                    <label for="phoneNumber">Phone Number:</label>
                    <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter your phone number" required asp-for="PhoneNumber">
                </div>
                <!-- Address Input -->
                <div class="form-group mb-3">
                    <label for="address">Address:</label>
                    <input type="text" class="form-control" id="address" placeholder="Enter your address" required asp-for="Address">
                </div>
                <!-- Terms and Conditions Checkbox -->
                <div class="form-group form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="termsCheck" required asp-for="IsAgreedTerms">
                    <label class="form-check-label" for="termsCheck">I agree to the <a href="#">Terms and Conditions</a></label>
                </div>
                <!-- Submit Button -->
                <button type="submit" class="btn btn-dark btn-block">Create Account</button>
            </form>
        </div>
    </div>
</div>