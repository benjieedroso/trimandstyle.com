<!-- Main Container -->
<div class="container mt-5">
    <!-- Booking Section -->
    <h1 class="mb-4 text-center">Book an Appointment</h1>
    <form class="mb-5">
        <div class="form-row">
            <div class="form-group col-md-6 mb-3">
                <label for="appointmentDate">Date</label>
                <input type="date" class="form-control" id="appointmentDate" required>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label for="appointmentTime">Time</label>
                <input type="time" class="form-control" id="appointmentTime" required>
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="selectBarber">Select Barber</label>
            <select class="form-control" id="selectBarber" required>
                <option value="" selected disabled>Choose your barber</option>
                <option value="1">John Doe</option>
                <option value="2">Jane Smith</option>
                <option value="3">Mike Johnson</option>
                <option value="4">Sarah Brown</option>
            </select>
        </div>
        <button type="submit" class="btn btn-dark btn-block">Book Now</button>
    </form>

    <!-- Barbers Section -->
    <h2 class="mb-4">Meet Our Barbers</h2>
    <div class="row">
        <!-- Barber Card -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="John Doe">
                <div class="card-body">
                    <h5 class="card-title">John Doe</h5>
                    <p class="card-text">Specializes in modern cuts and styles.</p>
                    <p class="card-text">
                        <strong>Rating:</strong>
                        <span class="badge badge-success">4.5</span>
                    </p>
                    <a href="#" class="btn btn-dark btn-block" data-toggle="modal" data-target="#worksModal">View Works</a>
                </div>
            </div>
        </div>
        <!-- Repeat for other barbers -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Jane Smith">
                <div class="card-body">
                    <h5 class="card-title">Jane Smith</h5>
                    <p class="card-text">Expert in classic and vintage styles.</p>
                    <p class="card-text">
                        <strong>Rating:</strong>
                        <span class="badge badge-success">4.7</span>
                    </p>
                    <a href="#" class="btn btn-dark btn-block" data-toggle="modal" data-target="#worksModal">View Works</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Mike Johnson">
                <div class="card-body">
                    <h5 class="card-title">Mike Johnson</h5>
                    <p class="card-text">Specializes in creative styles.</p>
                    <p class="card-text">
                        <strong>Rating:</strong>
                        <span class="badge badge-success">4.3</span>
                    </p>
                    <a href="#" class="btn btn-dark btn-block" data-toggle="modal" data-target="#worksModal">View Works</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Sarah Brown">
                <div class="card-body">
                    <h5 class="card-title">Sarah Brown</h5>
                    <p class="card-text">Known for precision to detail.</p>
                    <p class="card-text">
                        <strong>Rating:</strong>
                        <span class="badge badge-success">4.8</span>
                    </p>
                    <a href="#" class="btn btn-dark btn-block" data-toggle="modal" data-target="#worksModal">View Works</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Carousel Modal -->
<div class="modal fade" id="worksModal" tabindex="-1" aria-labelledby="worksModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="worksModalLabel">Barber's Works</h5>
                <button type="button" class="close btn btn-dark" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Bootstrap Carousel -->
                <div id="barberWorksCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#barberWorksCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#barberWorksCarousel" data-slide-to="1"></li>
                        <li data-target="#barberWorksCarousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://via.placeholder.com/800x400" class="d-block w-100" alt="Work 1">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Work 1</h5>
                                <p>Description of work 1.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="https://via.placeholder.com/800x400" class="d-block w-100" alt="Work 2">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Work 2</h5>
                                <p>Description of work 2.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="https://via.placeholder.com/800x400" class="d-block w-100" alt="Work 3">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Work 3</h5>
                                <p>Description of work 3.</p>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#barberWorksCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#barberWorksCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
