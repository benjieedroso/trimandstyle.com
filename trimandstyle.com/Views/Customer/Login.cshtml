<div class="container mt-6">
    <div class="row justify-content-start">
        <div class="col-md-6">
            <h1 class="mb-4">Barber Profile</h1>
            <form id="barberForm" class="mb-4" asp-controller="Barber" asp-action="Store">
                <!-- Name Input -->
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your name" required asp-for="Name">
                </div>
                <!-- Specialty Input -->
                <div class="form-group mt-3">
                    <label for="specialty">Specialty:</label>
                    <input type="text" class="form-control" id="specialty" placeholder="Enter your specialty" required asp-for="Specialty">
                </div>
                <!-- Photo Upload -->
                @*                 <div class="form-group mt-3">
                <label for="photo">Upload Photo:</label>
                <input type="file" class="form-control" id="photo" accept="image/*">
                </div> *@
                <!-- Create Profile Button -->
                <button type="submit" class="btn btn-dark mt-3">Create Profile</button>
            </form>
            <!-- Profile Display Section -->
            <div class="profile p-4 border rounded" id="profile" style="display: none;">
                <!-- Profile details will be displayed here -->
            </div>
        </div>
    </div>
</div>